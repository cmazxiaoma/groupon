<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cmazxiaoma.support.image.entity.ImageInfoMapper">

    <resultMap id="BaseResultMap" type="com.cmazxiaoma.support.image.entity.ImageInfo">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="width" property="width" jdbcType="INTEGER"/>
        <result column="height" property="height" jdbcType="INTEGER"/>
        <result column="source_path" property="sourcePath" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, width, height, source_path
    </sql>

    <select id="selectImageById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM image_info
        where id = #{id,jdbcType=BIGINT}
    </select>

    <insert id="insertImage" parameterType="com.cmazxiaoma.support.image.entity.ImageInfo">
        <selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into image_info (width, height, source_path)
        values (#{width,jdbcType=INTEGER}, #{height,jdbcType=INTEGER}, #{sourcePath,jdbcType=VARCHAR})
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.cmazxiaoma.support.image.entity.ImageInfo">
        update image_info
        <set>
            <if test="width != null">
                width = #{width,jdbcType=INTEGER},
            </if>
            <if test="height != null">
                height = #{height,jdbcType=INTEGER},
            </if>
            <if test="sourcePath != null">
                source_path = #{sourcePath,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>

</mapper>